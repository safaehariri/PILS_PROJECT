{
  "manifest_version": 3,
  "name": "Amazon review 1",
  "description": "Collects information about products from detail pages on Amazon. Collects: Title, Customer Review No., Price, ASIN, Rank, UPC.",
  "version": "1.1.9",
  
  "action": {
    "default_title": "Harvest",
    "default_icon": "icon.png",

    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "http://www.amazon.com/*", 
        "https://www.amazon.com/*", 
        "http://smile.amazon.com/*", 
        "https://smile.amazon.com/*", 
        "https://www.amazon.ca/*", 
        "https://www.amazon.co.uk/*", 
        "http://www.amazon.it/*", 
        "https://www.amazon.it/*", 
        "https://www.amazon.fr/*", 
        "https://www.amazon.es/*"
      ],
      "js": ["contentscript.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage" 
  ],

  "host_permissions": [
    "http://127.0.0.1:5000/",
    "http://www.amazon.com/*", 
    "https://www.amazon.com/*", 
    "http://smile.amazon.com/*", 
    "https://smile.amazon.com/*", 
    "https://www.amazon.ca/*", 
    "https://www.amazon.co.uk/*", 
    "http://www.amazon.it/*", 
    "https://www.amazon.it/*", 
    "https://www.amazon.fr/*", 
    "https://www.amazon.es/*"
  ]
}
